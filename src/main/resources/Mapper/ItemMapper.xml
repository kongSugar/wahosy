<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Item">

    <resultMap id="resultItem" type="Item">
        <id property="itemID" column="itemID"/>
        <result property="note" column="note"/>
        <result property="name" column="name"/>
        <result property="manufacturer" column="manufacturer"/>
        <result property="weight" column="weight"/>
        <result property="serialNumber" column="serialNumber"/>
        <result property="categoryID" column="categoryID"/>
        <result property="storeID" column="storeID"/>
    </resultMap>

    <select id="selectById" resultType="de.kongsugar.wahosy.to.Item">
        SELECT *
        FROM item
        WHERE itemID = #{itemID}
    </select>

    <select id="selectAll" resultType="de.kongsugar.wahosy.to.Item">
        SELECT *
        FROM item
    </select>

    <select id="selectAllBoxed" resultType="de.kongsugar.wahosy.to.Item">
        SELECT i.*
        FROM Box b
        LEFT OUTER JOIN box_has_item bhi ON b.boxID = bhi.boxID
        LEFT OUTER JOIN Item i ON bhi.itemID = i.itemID
    </select>

    <select id="selectByCategory" resultType="de.kongsugar.wahosy.to.Item">
        SELECT *
        FROM Item
        WHERE categoryID = #{id}
    </select>

    <select id="selectAllNotBoxed" resultType="de.kongsugar.wahosy.to.Item">
        <!-- TODO Select statement -->
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="itemID" keyColumn="itemID"
            parameterType="de.kongsugar.wahosy.to.Item">
        INSERT INTO Item (name, manufacturer, weight, serialnumber, note, categoryID)
        VALUES (#{name}, #{manufacturer}, #{weight}, #{serialNumber}, #{note}, #{categoryID})
    </insert>

    <update id="update">
        UPDATE Item
        SET
        name = #{name},
        manufacturer = #{manufacturer},
        weight = #{weight},
        serialNumber = #{serialNumber},
        note = #{note},
        categoryID = #{categoryID}
        WHERE itemID = #{itemID}

    </update>

    <delete id="delete">
        DELETE FROM Item
        WHERE itemID = #{itemID}
    </delete>

</mapper>